{
    "$schema": "https://biomejs.dev/schemas/2.1.3/schema.json",
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 100,
        "bracketSpacing": true,
        "bracketSameLine": false
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "double",
            "semicolons": "asNeeded",
            "arrowParentheses": "asNeeded"
        }
    }
}
